#!/bin/bash

source /home/amr/.bashrc

echo "restore DB if needed" > $1 2>&1
WEBSERVER_PATH=$(dirname $0)
yesterday=$(date -d "yesterday" "+%u")
cat $WEBSERVER_PATH/log/log.txt | grep -q "setValue: Problem" && echo "restoring DB" >> $1 2>&1;rm -rf $WEBSERVER_PATH/Library/Database;mv $WEBSERVER_PATH/Library/Database$yesterday $WEBSERVER_PATH/Library/Database >> $1 2>&1
